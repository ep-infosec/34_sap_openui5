<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:w="sap.ui.integration.widgets"
	xmlns:f="sap.f"
	displayBlock="true"
	controllerName="sap.f.cardsdemo.controller.Preview">
	<Page id="previewPage" title="{i18n>appTitle}">
		<subHeader>
			<Toolbar>
				<ToolbarSpacer />
				<Title text="Preview (to be used only inside the designtime)" />
				<ToolbarSpacer/>
			</Toolbar>
		</subHeader>

		<f:GridContainer class="sapUiSmallMargin">
			<w:Card id="card1" manifest="{manifests>/preview/list}" baseUrl="{cardsPlayground>/playgroundBaseUrl}">
				<w:layoutData>
					<f:GridContainerItemLayoutData columns="4" />
				</w:layoutData>
			</w:Card>
			<w:Card id="card2" manifest="{manifests>/preview/general}" baseUrl="{cardsPlayground>/playgroundBaseUrl}">
				<w:layoutData>
					<f:GridContainerItemLayoutData columns="4" />
				</w:layoutData>
			</w:Card>
			<w:Card id="card3" manifest="{manifests>/preview/numeric}" baseUrl="{cardsPlayground>/playgroundBaseUrl}">
				<w:layoutData>
					<f:GridContainerItemLayoutData columns="4" />
				</w:layoutData>
			</w:Card>

			<w:Card id="card4" manifest="{manifests>/preview/listWithActionsStrip}" baseUrl="{cardsPlayground>/playgroundBaseUrl}">
				<w:layoutData>
					<f:GridContainerItemLayoutData columns="3" />
				</w:layoutData>
			</w:Card>
		</f:GridContainer>
	</Page>
</mvc:View>